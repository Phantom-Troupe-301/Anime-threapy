    <section id="header-background">
        <header>

            <div id="logo">
                <img src="images/logo.png" alt="anime-threapy-logo">
            </div>
            <div id="main-navbar">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Faviourite List</a></li>
                    <li><a href="#">Contact Us</a></li>
                    <div id="cart">
                        <a href="#">
                            <ion-icon name="cart-outline"></ion-icon>
                        </a>
                    </div>
                </ul>
            </div>
        </header>
        <main>
            <div id="slider">
                <figure>
                    <div>

                        <img src="images/anime-slides/attackontitan.jpg" class="sliderimage" alt="">
                        <img src="images/anime-slides/death.jpg" class="sliderimage" alt="">
                    </div>
                    <div>
                        <img src="images/anime-slides/heroacdemia2.jpg" class="sliderimage" alt="">
                        <img src="images/anime-slides/tokyo.jpg" class="sliderimage" alt="">
                    </div>
                    <div>
                        <img src="images/anime-slides/hell.jpg" class="sliderimage" alt="">
                        <img src="images/anime-slides/stains.png" class="sliderimage" alt="">
                    </div>
                    <div>
                        <img src="images/anime-slides/one puch.jpg" class="sliderimage" alt="">
                        <img src="images/anime-slides/black.jpg" class="sliderimage" alt="">
                    </div>
                </figure>
            </div>
    </section>
    <section id="anime-search">
        <div class="search-header">
            <h1>See Your Faviourite Anime</h1>
            <div class="border-line"></div>
            <h5>Search By title or Catagory</h5>
            <div id="anime-user-choosing">
                <button id="title-btn">Tittle</button>
                <button id="catagory-btn">Catagory</button>
            </div>
        </div>
        <form id="search-by-title" action="/anime" method="POST">

            <input type="text" id="anime-title" name="search" placeholder="Search for your anime">
            <ion-icon id="search" name="search-outline"></ion-icon>
            <div id="search-btn">
                <button type="submit">Search</button>
            </div>
        </form>
        <form id="search-by-catagory" action="/genre" method="POST">
            <!-- <input type="text" id="anime-title" name="search" placeholder="Search for your anime"> -->
            <select id="catagory-dropdown" name="search">
		  <option value="select your catagory">select your catagory</option>
                <option value="1" name="search">Action</option>
                <option value="2" name="search">Advanture</option>
                <option value="36" name="search">slice of life</option>
                <option value="22" name="search">romance</option>
                <option value="14" name="search">horror</option>
                <option value="13" name="search">history</option>
                <option value="40" name="search">psychological</option>
                <option value="8" name="search">drama</option>
                <option value="27" name="search">Shounen</option>
	      <option value="30" name="search">Sports</option>
	      <option value="31" name="search">Super Power</option>
	      <option value="32" name="search">Vampire</option>
	      <option value="42" name="search">Seinen</option>
            </select>
            <div id="second-search-btn">
                <button type="submit">Search</button>
            </div>
        </form>

    </section>
    <section>
        <div id="outer-box">
            <h1>Top 10 Anime</h1>
            <div id="control-btns">
                <ion-icon id="arrow-right" name="arrow-forward-circle-outline"></ion-icon>
                <ion-icon id="arrow-left" name="arrow-back-circle-outline"></ion-icon>
                <div id="inner-box">
                    <div id="slider1">
                        <div id="vcards">
                            <% for(let i=0;i<10;i++){%>
                                <div class="vcard">
                                    <div class="anime-box">
                                        <div class="anime-img">
                                            <img src="<%= top[i].image_url%>" alt="death-note">
                                        </div>
                                        <div class="anime-title">
                                            <h1>
                                                <%= top[i].title%>
                                            </h1>
                                        </div>
                                        <div class="anime-details">
                                            <p>
                                                | <span> score: <%= top[i].score%> </span> |
                                                <br>
                                                <br>
                                                <span><%= top[i].episodesOrVolumes%> episodes</span>
                                            </p>
                                        </div>
                                        <a href="#" class="like">
                                            <i class="fas fa-heart" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                                <%} %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="News-letter">
        <div class="slider">
            <img src="images/anime-slides/anime-group.jpg">

            <div class="slider-text">
                <h2>NEWSLETTER</h2>
            </div>
            <div class="slider-content">
                <p>Enter your email address to receive all news, updates on new arrivals, special offers and other discount information.</p>
                <div id="email-feild">
                    <input id="email" type="email" placeholder="Your-Email..." name="email">
                    <button class="Subscribe">Subscribe</button>
                </div>
            </div>
        </div>
    </section>
    <section id="News">
        <h1>News</h1>
        <div class="border-bottom"></div>
        <div id="control-btns">
            <ion-icon id="arrow-right" name="arrow-forward-circle-outline"></ion-icon>
            <ion-icon id="arrow-left" name="arrow-back-circle-outline"></ion-icon>
            <div id="inner-box">
                <div id="slider1">
                    <div id="vcards">
                        <%top.forEach(val=>{%>
                            <div id="news-content">
                                <img src="<%= val.image_url%>" alt="">
                                <div class="news-article-content-box">
                                    <h1>
                                        <%= val.title%>
                                    </h1>
                                    <span class="durition"><%= val.producers%></span>

                                    <span class="catagory"><%=val.name%></span>
                                    <span class="realese"> <%= val.airing_start%></span>
                                    <p class="article-des-pargraph">
                                        <%= val.synopsis%>
                                    </p>
                                </div>
                            </div>
                            <%})%>
                    </div>
                </div>
            </div>
        </div>

    </section>
    </main>

    <footer>
        <div class="footer-logo">
            <img src="images/logo.png" alt="logo-footer">
            <div id="navbar">
                <ul>
                    <li><a href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook"></i></a></li>
                    <li><a href="https://twitter.com/" target="_blank"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="https://www.pinterest.com/" target="_blank"><i class="fab fa-pinterest-p"></i></a></li>
                    <li><a href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"
                                target="_blank"></i></a></li>
                </ul>
            </div>
            <div class="copyright">
                <p> &copy;2020 All Right Reserved by the Phantom troupe</p>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    <script src="https://kit.fontawesome.com/2ebd6f0149.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="js/lightslider.js"></script>
    <script src="js/app.js"></script>
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>

</html>