<!DOCTYPE html>
<html lang="en">

<%- include('layout/head'); -%>
    <style>
        #header-background {
            height: 400px !important;
        }
        
        body {
            overflow: scroll;
        }
    </style>

    <head>
        <link rel="stylesheet" href="/css/anime.css">
    </head>

    <body>
        <%- include('./layout/header'); -%>

            <main>
                <!-- <div class="section_header">
                    <ul>
                        <a href="#manga">
                            <li>
                                Manga
                            </li>
                        </a>
                    </ul>
                </div> -->
                <!-- <h2>Anime</h2> -->
                <section id="Anime">
                    <% animeSearch.forEach(data=>{%>
                        <div class="data">
                            <img src="<%= data.image%>" alt="  <%= data.title %>">
                            <div class="details_content">
                                <h2>
                                    <%= data.title %>
                                </h2>
                                <hr>
                                <h6>
                                    <%= data.averageRating%>
                                </h6>

                                <form action="/details" method="POST">
                                    <input type="text" name="search" value="<%= data.id%>" style="visibility: hidden ">
                                    <br><button class="btnDetails" type="submit">more details</button></form>
                            </div>
                        </div>
                        <%}) %>
                </section>
                <hr>

                <div class="section_header">
                    <h2>Manga</h2>
                    <ul>
                        <a href="#Anime">
                            <li>
                                Manga
                            </li>
                        </a>
                    </ul>
                </div>
                <section id="manga">

                    <%manga.forEach(data=>{%>
                        <div class="data">
                            <img src="<%= data.cover_image%>" alt="  <%= data.title %>">
                            <div class="details_content">
                                <h2>
                                    <%= data.title %>
                                </h2>
                                <hr>
                                <h6>
                                    <%= data.averageRating%>
                                </h6>
                                <form action="/details" method="POST">
                                    <input type="text" name="search2" value="<%= data.id%>" style="visibility: hidden ">
                                    <button class="btnDetails " type="submit ">more details</button></form>
                            </div>
                        </div>
                        <%})%>
                </section>
            </main>
    </body>
    <%- include('./layout/footer'); -%>

</html>