<%- include('layout/head'); -%>
    <%- include( 'layout/header'); -%>
        <%- include('layout/preloader'); -%>

            <% bookResults.forEach(data=>{%>
                <div id="anime-info">
                    <div class="detail-anime-title">

                        <h2>
                            <%=data.title %>
                        </h2>
                    </div>

                    <div id="anime-full-info">
                        <div class="detail-anime-image">
                            <img src="<%= data.image%>" alt="  <%= data.title %>">
                        </div>
                        <div id="anime-first-detail">
                            <div class="rating">
                                <h6>
                                    <%= data.averageRating%>
                                </h6>
                            </div>
                            <div class="start-date">
                                <h6>Start:
                                    <%= data.startDate%>
                                </h6>
                            </div>
                            <div class="end-date">
                                <h6> <br> End:
                                    <%= data.endDate%>
                                </h6>
                            </div>
                            <h6>


                                <h6>
                                    <%= data.gener_old%>
                                </h6>
                                <h6>
                                    <%= data.subtype%>
                                </h6>
                                <h6>
                                    <%= data.status%>
                                </h6>
                                <h6>
                                    <%= data.episodeCount%>
                                </h6>

                                <h6>
                                    <%= data.episodeLength%>
                                </h6>
                                <div class="detail-anime-des">
                                    <p>
                                        <%= data.synopsis.substring(0,300)%>
                                    </p>
                                </div>
                        </div>

                        <div class="anime-detail-video">
                            <iframe width="420" height="315" src="https://www.youtube.com/embed/<%= data.youtubeVideoId%>">
	</iframe>
                        </div>

                        <%})%>%>





                            <%- include('layout/footer'); -%>